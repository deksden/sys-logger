# Базовые настройки логирования
LOG_LEVEL=silence              # Уровень логирования (trace, debug, info, warn, error, fatal)
LOG_FOLDER=logs             # Папка для лог файлов
LOG_MAX_SIZE=10485760      # Максимальный размер файла лога в байтах (10MB)

DEBUG=-vite:*,-vite-node:*,-connect:*

# Расширенные настройки логирования
LOG_COLORIZE=true           # Использовать цветной вывод
LOG_SYNC=true             # Использовать синхронную запись (влияет на производительность)
LOG_TIMESTAMPS=true        # Добавлять метки времени
LOG_PID=false             # Добавлять PID процесса
LOG_HOSTNAME=false        # Добавлять имя хоста
LOG_CONTEXT=true          # Добавлять контекст вызова
LOG_BUFFER_SIZE=0         # Размер буфера для записи (0 = без буферизации)
LOG_PRETTY=true          # Использовать форматированный вывод
LOG_FILE_OUTPUT=true     # Включить запись в файл
LOG_CONSOLE_OUTPUT=true  # Включить вывод в консоль

# Расширенное форматирование логов
LOG_SHOW_NAMESPACE=true    # Показывать namespace в сообщениях
